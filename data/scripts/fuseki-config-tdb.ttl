@prefix :        <#> .
@prefix fuseki:  <http://jena.apache.org/fuseki#> .
@prefix rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:    <http://www.w3.org/2000/01/rdf-schema#> .
@prefix tdb:     <http://jena.hpl.hp.com/2008/tdb#> .
@prefix ja:      <http://jena.hpl.hp.com/2005/11/Assembler#> .
@prefix text:    <http://jena.apache.org/text#> .
@prefix dc:      <http://purl.org/dc/elements/1.1/> .
@prefix locah:   <http://data.archiveshub.ac.uk/def/> .
@prefix skos:    <http://www.w3.org/2004/02/skos/core#>

[] rdf:type fuseki:Server ;
   # Timeout - server-wide default: milliseconds.
   # Format 1: "1000" -- 1 second timeout
   # Format 2: "10000,60000" -- 10s timeout to first result, then 60s timeout to for rest of query.
   # See java doc for ARQ.queryTimeout
   # ja:context [ ja:cxtName "arq:queryTimeout" ;  ja:cxtValue "10000" ] ;
   # ja:loadClass "your.code.Class" ;

   fuseki:services (
   #  <#BFSService>
     <#alodService>
   ) .

# TDB
[] ja:loadClass "com.hp.hpl.jena.tdb.TDB" .
tdb:DatasetTDB  rdfs:subClassOf  ja:RDFDataset .
tdb:GraphTDB    rdfs:subClassOf  ja:Model .

## Initialize text query
[] ja:loadClass       "org.apache.jena.query.text.TextQuery" .
# A TextDataset is a regular dataset with a text index.
text:TextDataset      rdfs:subClassOf   ja:RDFDataset .
# Lucene index
text:TextIndexLucene  rdfs:subClassOf   text:TextIndex .
# Solr index
text:TextIndexSolr    rdfs:subClassOf   text:TextIndex .

<#BFSService> rdf:type fuseki:Service ;
    rdfs:label                         "TDB Service (RW) for BFS" ;
    fuseki:name                        "bfs" ;
    fuseki:serviceQuery                "sparql" ;
    fuseki:serviceUpdate               "update" ;
    fuseki:serviceUpload               "upload" ;
    fuseki:serviceReadGraphStore       "get" ;
    # note that everyone which knows this URI can post to it like this
    fuseki:serviceReadWriteGraphStore  "rww" ;
    fuseki:dataset                     <#BFSDataset> ;
    .

<#BFSDataset> rdf:type      tdb:DatasetTDB ;
    tdb:location "/data/fusekidb/BFSDB" ;
    ##tdb:unionDefaultGraph true 
##     # Query timeout on this dataset (milliseconds)
##     ja:context [ ja:cxtName "arq:queryTimeout" ;  ja:cxtValue "1000" ] ;
.

## ALOD in-memory
<#alodService> rdf:type fuseki:Service;
	fuseki:name                        "alod";
	fuseki:serviceQuery                "sparql";
	fuseki:serviceQuery                "query";
	fuseki:serviceUpdate               "update";
	fuseki:serviceUpload               "upload";
	fuseki:serviceReadWriteGraphStore  "data";
	fuseki:serviceReadGraphStore       "get";
	fuseki:dataset                     :text_dataset;
	.



<#alodDataset> rdf:type tdb:DatasetTDB ;
    tdb:location "/Users/ktk/tmp/alod/DB" ;
    ##tdb:unionDefaultGraph true 
##     # Query timeout on this dataset (milliseconds)
##     ja:context [ ja:cxtName "arq:queryTimeout" ;  ja:cxtValue "1000" ] ;
.

## ---------------------------------------------------------------
## This URI must be fixed - it's used to assemble the text dataset.
## For creating the index, see https://jena.apache.org/documentation/query/text-query.html

:text_dataset rdf:type     text:TextDataset ;
    text:dataset   <#alodDataset> ;
    text:index     <#indexLucene> ;
    .

# Text index description
<#indexLucene> a text:TextIndexLucene ;
    text:directory <file:/Users/ktk/tmp/alod/Lucene> ;
    ##text:directory "mem" ;
    text:entityMap <#entMap> ;
    .

# Mapping in the index
# URI stored in field "uri"
# rdfs:label is mapped to field "text"
<#entMap> a text:EntityMap ;
    text:entityField      "uri" ;
    text:graphField       "graph" ;
    text:defaultField     "title" ;
    text:map (
         # dc:title
         [ text:field "title" ;
           text:predicate dc:title ;
           #text:analyzer [ a text:LowerCaseKeywordAnalyzer ]
         ]
         # locah:note
         [ text:field "note" ;
           text:predicate locah:note ;
           #text:analyzer [ a text:LowerCaseKeywordAnalyzer ]
         ]
         ) .
